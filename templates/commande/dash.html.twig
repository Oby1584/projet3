{% extends "base.html.twig" %}

{% block title %}Fichier Commande{% endblock %}

{% block body %}
<div class="container">
<table class="table table-dark table-striped">
<thead>
    <tr>
    <th>#</th>
    <th>Quantité</th>
    <th>Montant</th>
    <th>Etat</th>
    <th>Date d'enregistrement</th>
    <th>Option</th>
    </tr>
</thead>
<tbody>
      <h1 class="text-center text-primary m-5" >Nos Commandes</h1>
    <div class="container">
    <a href="#" class="btn btn-primary btn-lg mb-5">Ajouter</a>
    </div>

    {% for Commande in dash %}
      <div class="container ">

      
    <tr>
        <td>{{ Commande.id}}</td>
        <td>{{ Commande.quantite}}</td>
        <td>{{ Commande.montant}}</td>
        <td>{{ Commande.etat}}</td>
        <td>{{ Commande.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
        <td>
           
            
            <a href="{{ path('voir', {id: Commande.id} ) }}" class="text-info">voir</a>
            <a href="{{ path("modifier", {id:Commande.id}) }}" class="text-warning">modifier</a>
            <a href="{{ path('supprimer', {id: Commande.id}) }}" class="text-danger">supprimer</a>
            

        </td>
        
    </tr>
      </div>  
    {% endfor %}
</tbody>
</table>
</div>

{% endblock %}