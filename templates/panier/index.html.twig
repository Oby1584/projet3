{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<h1 class="text-center m-5">Panier</h1>

{% if items %}
{#  si j'ai des products dans mon panier, j'affiche son contenu #}
<table class="table">
<thead>
    <tr>
    <th>product</th>
    <th>Prix</th>
    <th>Quantité</th>
    <th>Total</th>
    <th></th>
    </tr>

</thead>
<tbody>
{% for item in items %}
    
    <tr>
    <td><img src="{{ item.product.photo }}" alt="" width="50"></td>
    <td>{{ item.product.prix }}</td>
    <td>{{ item.quantity }}</td>
    <td>{{ item.product.prix * item.quantity}}€</td>
    <td>
        <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn-sm btn-danger">X</a>
    </td>
    </tr>
{% endfor %}

</tbody>
<tfoot>
    <tr>
    <td class="text-end" colspan="3">Total</td>
    <td colspan="2">{{ total }}€</td>
    

    </tr>

</tfoot>
</table>
<div class="container text-end">
<a href="#" class="btn btn-primary text-center m-5" >Valider mon panier</a>
</div>

{% else %}
    <h2 class="text-center mt-5" >vide</h2>
{% endif %}

{% endblock %}
