{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mx-auto w-50 border border-primary rounded mt-3 p-4" >
    <h1 class="text-center my-3 text-primary" >Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {
        attr: {
            novalidate: 'novalidate'
        }
    }) }}

    <div class="row">

       
        <div class="col-6"> {{ form_row(registrationForm.prenom,{
            label:'Pr√©nom'
        }) }}</div>
         
        <div class="col-6">{{ form_row(registrationForm.nom, {
            label:'Nom'
        }) }}</div>   
         
        <div class="col-6">{{ form_row(registrationForm.pseudo, {
            label:'pseudo'
        }) }}</div>

        <div class="col-6">{{ form_row(registrationForm.civilite, {
            label:'civilite'
        }) }}</div>
        <div class="col-6">{{ form_row(registrationForm.statut, {
            label:'statut'
        }) }}</div>
    
    
         
     


    </div>
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {# {{ form_row(registrationForm.agreeTerms) }} #}

        <button type="submit" class="btn btn-outline-primary col-12">Inscription</button>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
