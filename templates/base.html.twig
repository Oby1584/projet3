<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Oby15{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
       <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.1/lumen/bootstrap.min.css" integrity="sha512-fKDj8F7xzwSZWiYW5RvcusuIyGuAOIoSLUHWpMhhqp8k5j63ZASSee5d+0RBM0M8Qu5iPpSNIAmFx6a7wwDgBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('accueil') }}">Oby15</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="{{ path('accueil') }}">Accueil
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('produits') }}">Nos produits</a>
        </li>
        {# <li class="nav-item">
          <a class="nav-link" href="{{ path('formulaireProduit') }}">Formulaire</a>
        </li> #}
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
          <a class="nav-link" href="{{ path('admin') }}">Backoffice</a>
        </li>
        {# <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Back Office</a>
          <div class="dropdown-menu bg-primary">
            <a class="dropdown-item" href="{{ path('fichier') }}">Gestion Produit</a>
            <a class="dropdown-item" href="{{ path('formulaireProduit') }}">Ajout produit</a>
            <a class="dropdown-item" href="#">Something else here</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Separated link</a>
          </div>
        </li> #}
        {% endif %}

       <li class="nav-item">
          <a class="nav-link position-relative" href="{{ path('cart') }}">Panier


          {% if app.session.get('qt') > 0 %}
          
          <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
             {{ app.session.get('qt') }}
          <span class="visually-hidden">unread messages</span>
          </span>
          {% endif %}

          </a>
        </li> 

      </ul>

      
      {% if app.user %}
      
      <a href="{{ path('app_logout') }}" class="btn btn-outline-danger me-3" >Déconnexion</a>
      {% else %}
        
      <a href="{{ path('register') }}" class="btn btn-outline-dark me-3" >Inscription</a>
      <a href="{{ path('app_login') }}" class="btn btn-outline-light me-3" >Connexion</a>
      {% endif %}


      

      <form class="d-flex">
        <input class="form-control me-sm-2" type="search" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
        {% block body %}{% endblock %}
    
    
     <footer>
        <div class="container">
        <p class="text-center" > &copy; Copyright {{ 'now'| date('Y') }}  - 15 </p>
        </div>
        </footer><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </body>
</html>
